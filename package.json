{
    "name": "@verida/airdrop-api",
    "version": "0.1.0",
    "description": "An API that supports verifying XP to facilitate a Verida Airdrop",
    "main": "dist/server.js",
    "scripts": {
      "prebuild": "echo 'export const Version = { version: \"'$npm_package_version'\", build_utc: \"'$(date -u -Iseconds)'\" };' > ./src/version.ts",
      "dev": "yarn build; nodemon src/server.js",
      "build": "rm -rf dist && tsc",
      "prestart": "yarn build",
      "start": "node dist/server.js",
      "tests": "ts-mocha './tests/**/*.ts'",
      "deploy-prod": "yarn build && yarn sls deploy --stage prod"
    },
    "repository": "https://github.com/verida/network-data-api",
    "author": "Verida",
    "license": "ISC",
    "private": false,
    "engines": {
      "node": ">=16.0.0"
    },
    "dependencies": {
      "body-parser": "^1.20.2",
      "cors": "^2.8.5",
      "dotenv": "^16.0.3",
      "express": "^4.18.2",
      "lodash": "^4.17.21",
      "serverless-http": "^3.1.1"
    },
    "devDependencies": {
      "@types/express": "^4.17.17",
      "@types/mocha": "^10.0.1",
      "mocha": "^10.2.0",
      "nodemon": "^2.0.21",
      "serverless": "^3.28.1",
      "serverless-offline": "^12.0.4",
      "serverless-plugin-common-excludes": "^4.0.0",
      "serverless-plugin-include-dependencies": "^5.0.0",
      "typescript": "^4.9.5"
    }
  }
  