{
  "name": "@verida/airdrop-api",
  "version": "0.1.0",
  "description": "An API that supports verifying XP to facilitate a Verida Airdrop",
  "private": true,
  "repository": "https://github.com/verida/airdrop-api",
  "author": "Verida",
  "license": "ISC",
  "main": "dist/server.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "check": "eslint .",
    "prestart": "yarn build",
    "start": "sls offline start --stage offline --noTimeout",
    "tests": "ts-mocha './tests/**/*.ts'",
    "deploy-prod": "export AWS_PROFILE=verida-mainnet && yarn build && yarn sls deploy --stage prod"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "@verida/client-ts": "^3.0.3-alpha.0",
    "@verida/types": "^3.0.1-alpha.0",
