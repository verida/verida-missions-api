{
  "compilerOptions": {
    "strict": true,
    "module": "node16",
    "lib": ["es2023"],
    "target": "es2022",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "outDir": "dist",
    "sourceMap": true
  }
}
